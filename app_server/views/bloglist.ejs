<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

  </head>

  <body>
    <% include nav %>

    <h1><%= title %></h1>
    <div class="container">
      <% let blog = {}; %>
      <% blogList.forEach(function(blog) { %>
	     <div class="card border-primary" style="width: 50%">
		  <div class="card-header">
		    <div class="row">
		      <div class="col-sm">
			<%= blog.blogTitle %>
		      </div>
		    </div>
		  </div>
		      <div class="card-body">
			<p class="card-text"><%= blog.blogText %></p>
                      </div>
                   <div class="card-footer">
                      <p class="card-text"><%= blog.createdOnDate %></p>
		       <a href="/blogedit/<%= blog.blogId %>" class="btn btn-primary">Edit Blog</a>
                       <a href="/blogdelete/<%= blog.blogId %>" class="btn btn-danger">Delete Blog</a>
                   </div>
                   
           </div> <% }); %>				    
  </body>


</html>
